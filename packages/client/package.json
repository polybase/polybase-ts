{
  "name": "@polybase/client",
  "description": "Client (browser/node) for Polybase",
  "version": "0.3.9",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "homepage": "https://github.com/polybase/polybase-ts/tree/main/packages/client",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "yarn clean && tsc",
    "prepare": "yarn build",
    "release": "npx np",
    "test": "jest ./src",
    "test:e2e": "jest ./e2e --verbose",
    "fix": "yarn eslint \"./src/**/*.{ts,tsx}\" --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/e2e"
    ],
    "testMatch": [
      "<rootDir>/**/*.spec.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^9.1.2",
    "@types/jest": "^29.2.2",
    "@types/lodash.merge": "^4.6.7",
    "@types/sinonjs__fake-timers": "^8.1.2",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "axios-mock-adapter": "^1.21.2",
    "eslint": "^8.26.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-n": "^15.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "ethereumjs-util": "^7.1.5",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^5.7.2",
    "jest": "^29.2.2",
    "keccak256": "^1.0.6",
    "np": "^7.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@polybase/eth": "^0.3.9",
    "@polybase/polylang": "^0.3.1",
    "axios": "0.27.2",
    "lodash.merge": "^4.6.2"
  }
}
