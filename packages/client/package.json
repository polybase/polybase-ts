{
  "name": "@polybase/client",
  "description": "Client (browser/node) for Polybase",
  "version": "0.3.38",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "homepage": "https://github.com/polybase/polybase-ts/tree/main/packages/client",
  "license": "MIT",
  "files": [
    "dist/*",
    "src/*"
  ],
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "yarn clean && tsc && webpack",
    "prepare": "yarn build",
    "release": "npx np",
    "test": "jest ./src",
    "test:e2e": "jest ./e2e --verbose",
    "fix": "yarn eslint \"./src/**/*.{ts,tsx}\" --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/e2e"
    ],
    "testMatch": [
      "<rootDir>/**/*.spec.{js,jsx,ts,tsx}"
    ]
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^10.0.2",
    "@types/jest": "^29.2.4",
    "@types/sinonjs__fake-timers": "^8.1.2",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@polybase/eth": "^0.3.38",
    "@polybase/polylang": "0.4.9",
    "axios": "0.27.2"
  }
}
