{
  "name": "@spacetimexyz/client",
  "description": "Client (browser/node) for Spacetime",
  "version": "0.1.27",
  "types": "./node/index.d.ts",
  "license": "MIT",
  "files": [
    "node/*",
    "web/*"
  ],
  "scripts": {
    "clean": "rimraf node/* && rimraf web/*",
    "build": "yarn clean && webpack build",
    "prepare": "yarn build",
    "release": "npx np",
    "test": "jest ./src",
    "test:e2e": "jest ./e2e --verbose",
    "fix": "yarn eslint \"./src/**/*.{ts,tsx}\" webpack.config.js --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/e2e"
    ],
    "testMatch": [
      "<rootDir>/**/*.spec.{js,jsx,ts,tsx}"
    ],
    "moduleNameMapper": {
      "^@spacetimexyz/parser$": "@spacetimexyz/parser/node"
    },
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^9.1.2",
    "@types/jest": "^29.0.0",
    "@types/lodash.merge": "^4.6.7",
    "@types/sinonjs__fake-timers": "^8.1.2",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "axios-mock-adapter": "^1.21.2",
    "eslint": "^8.22.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.2",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereumjs-util": "^7.1.5",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^5.7.0",
    "jest": "^28.1.3",
    "keccak256": "^1.0.6",
    "np": "^7.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.3.1",
    "typescript": "^4.6.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@spacetimexyz/eth": "^0.1.27",
    "@spacetimexyz/parser": "^0.1.2",
    "axios": "^0.27.2",
    "lodash.merge": "^4.6.2"
  }
}
